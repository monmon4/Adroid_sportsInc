<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".Activities.ClassesDetailsActivity">

    <com.quantumsit.sportsinc.CustomView.CustomLoadingView
        android:id="@+id/LoadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.quantumsit.sportsinc.CustomView.CustomLoadingView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:padding="10dp">
            <ImageView
                android:id="@+id/Course_icon"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:layout_height="150dp"
                android:src="@drawable/star"/>

            <TextView
                android:id="@+id/course_details_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:text="level Beginner"
                android:textColor="@color/colorPrimaryDark"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAppearance="?android:textAppearanceLarge"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="From: "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="21/01/2018"
                    android:layout_marginStart="10dp"
                    android:id="@+id/course_details_start_date"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="To: "
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="10dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="01/02/2018"
                    android:id="@+id/course_details_end_date"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margin"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price : "
                            android:paddingStart="16dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold|italic"
                            android:textAppearance="?android:textAppearanceMedium"
                            />
                        <TextView
                            android:id="@+id/course_details_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:text="100"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            />
                        <TextView
                            android:id="@+id/course_details_price_Curencey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No. classes : "
                            android:paddingStart="16dp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold|italic"
                            android:textAppearance="?android:textAppearanceMedium"/>
                        <TextView
                            android:id="@+id/course_details_no_classes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:layout_marginStart="10dp"
                            android:textAppearance="?android:textAppearanceMedium"
                            />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginTop="@dimen/top_margin"
                android:text="Description:"
                android:textStyle="bold|italic"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="5dp">
                <TextView
                    android:id="@+id/course_details_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="this course is for beginners asdasdsalkl dlsadla;sdask"
                    android:textAppearance="?android:textAppearanceMedium"
                    />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
