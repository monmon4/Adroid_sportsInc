<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.quantumsit.sportsinc.MyClasses_fragments.ScoresFragment">


    <TextView
        android:id="@+id/textView_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:drawableTop="@drawable/ic_faded_my_classes"
        android:textSize="18sp"
        android:alpha="0.30"
        android:textColor="@color/colorRed"
        android:text="@string/no_scores" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_scores"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</RelativeLayout>
