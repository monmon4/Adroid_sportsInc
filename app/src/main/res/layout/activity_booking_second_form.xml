<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quantumsit.sportsinc.RegisterationForm_fragments.BookingSecondFormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView_second"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardCornerRadius="10dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardPreventCornerOverlap="false"
                android:background="@color/colorWhite"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorRegisterGrayGender"
                        android:textColor="@color/colorWhite"
                        android:padding="10dp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:text="@string/medical_conditions" />

                    <CheckBox
                        android:layout_margin="5dp"
                        android:id="@+id/checkBox1_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/asthma"
                        android:textColor="@color/colorRegisterGraySteps"/>

                    <CheckBox
                        android:layout_margin="5dp"
                        android:id="@+id/checkBox2_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/heart_issues"
                        android:textColor="@color/colorRegisterGraySteps"/>

                    <CheckBox
                        android:layout_margin="5dp"
                        android:id="@+id/checkBox3_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRegisterGraySteps"
                        android:text="@string/chronic_issues_respiratory_tract" />

                    <CheckBox
                        android:layout_margin="5dp"
                        android:id="@+id/checkBox4_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorRegisterGraySteps"
                        android:text="@string/chronic_issues_with_ears" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_other"
                        android:layout_margin="2.5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/other_second"
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:hint="@string/other" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:onClick="back_second"
            android:id="@+id/backButton_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginEnd="2.5dp"
            android:background="@color/colorLogoBlue"
            android:drawableStart="@drawable/ic_back"
            android:gravity="center"
            android:paddingStart="10dp"
            android:textColor="@color/colorWhite"
            android:text="@string/back" />

        <Button
            android:onClick="next_second"
            android:id="@+id/nextButton_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:layout_marginStart="2.5dp"
            android:background="@color/colorLogoBlue"
            android:textColor="@color/colorWhite"
            android:drawableEnd="@drawable/ic_next"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:text="@string/next" />
    </LinearLayout>


</RelativeLayout>
