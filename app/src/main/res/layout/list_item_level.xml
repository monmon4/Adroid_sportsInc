<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/CourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLogoBlue"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="italic"
        android:text="@string/email"/>


<android.support.v7.widget.CardView
    android:layout_marginTop="@dimen/ten_dimens"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="@dimen/cardview_default_elevation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_5"
        android:layout_marginEnd="@dimen/padding_5"
        android:background="@color/colorLogoBlue">
        <ImageView
            android:id="@+id/Course_icon"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_marginEnd="@dimen/ten_dimens"
            android:background="@color/colorWhite"
            android:src="@drawable/star"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="80dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:background="@color/colorWhite">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLogoBlue"
                        android:text="@string/classesNum"/>
                    <TextView
                        android:id="@+id/sessionNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_5"
                        android:text="8"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/ten_dimens"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorLogoBlue"
                        android:text="@string/duration"/>
                    <TextView
                        android:id="@+id/sessionDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_5"
                        android:text="8"/>
                </LinearLayout>
            </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>