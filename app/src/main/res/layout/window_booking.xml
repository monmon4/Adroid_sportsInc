<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:orientation="vertical"
    android:background="@drawable/window_border">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLogoBlue"
        android:gravity="center"
        android:padding="14dp"
        android:drawableEnd="@drawable/ic_close"
        android:background="@color/colorCoursesDetails"
        android:text="@string/trainees" />

    <ListView
        android:id="@+id/traineeListView_window"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:paddingEnd= "14dp"
        android:paddingStart= "8dp">
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorHomeGray"/>

    <TextView
        android:id="@+id/addTraineeTextView_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="14dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/colorLogoBlue"
        android:drawableEnd="@drawable/ic_add_box"
        android:text="@string/add_new_trainee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLogoBlue"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingEnd="14dp"
        android:paddingStart="14dp"
        android:paddingTop="10dp">

        <ImageButton
            android:id="@+id/addButton_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/cornered_background_gray_dark"
            android:src="@drawable/ic_booking_add" />

        <Button
            android:id="@+id/checkoutButton_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cornered_background_red"
            android:text="@string/check_out"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

</LinearLayout>
