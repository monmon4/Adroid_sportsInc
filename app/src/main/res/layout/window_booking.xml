<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffff">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLogoBlue"
        android:gravity="center"
        android:padding="14dp"
        android:drawableEnd="@drawable/ic_close"
        android:background="@color/colorCoursesDetails"
        android:text="@string/trainees" />

    <ListView
        android:id="@+id/traineeListView_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd= "14dp"
        android:paddingStart= "8dp">
    </ListView>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="14dp"
        android:textColor="@color/colorLogoBlue"
        android:drawableEnd="@drawable/ic_add_box"
        android:text="@string/add_new_trainee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="14dp"
        android:background="@color/colorLogoBlue"
        android:paddingStart="14dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_booking"
            android:background="@drawable/cornered_background_gray_dark"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:background="@drawable/cornered_background_red"
            android:text="@string/check_out" />
    </LinearLayout>

</LinearLayout>
