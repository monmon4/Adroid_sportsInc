<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="1sp"
    card_view:cardCornerRadius="5dp"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/eventTitle"
            android:paddingStart="16dp"
            android:paddingTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Play football with your frinds"
            android:gravity="start"
            android:background="@color/colorTabIndicator"
            android:paddingBottom="10dp"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"

                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="5sp"
                card_view:cardCornerRadius="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/eventMonth"
                        android:layout_width="match_parent"
                        android:text="Oct"
                        android:paddingBottom="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:gravity="center"
                        android:background="@color/colorCalendarBack"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/eventDay"
                        android:layout_width="match_parent"
                        android:text="10"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:gravity="center"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/eventContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="50"
                    android:textColor="@color/colorBlack"
                    android:paddingBottom="10dp"
                    android:text="This event is about how do you learn to swim with your own"
                    android:textAppearance="?android:textAppearanceMedium"/>
                <LinearLayout
                    android:paddingStart="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/eventDate"
                        android:text="Fir Jun 12 2018"
                        android:textColor="@color/colorGray"
                        android:paddingStart="10dp"
                        android:paddingBottom="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:paddingStart="7dp"
                        android:paddingEnd="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="at"
                        android:textStyle="bold"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                    <TextView
                        android:id="@+id/eventTime"
                        android:paddingRight="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:30 pm"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>