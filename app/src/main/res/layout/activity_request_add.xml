<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quantumsit.sportsinc.Request_addActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/courseNameSpinner_requestadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:hint="Course name"
            android:textColorHint="@color/colorAccent"
            app:met_floatingLabel="normal"
            android:layout_weight="1" />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/dateSpinner_requestadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:hint="Date"
            android:textColorHint="@color/colorAccent"
            app:met_floatingLabel="normal"
            android:layout_weight="1" />

    </LinearLayout>

    <EditText
        android:id="@+id/reasonEditText_requestadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/write_your_reason"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/sendButton_requestadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="end"
        android:onClick="send_clicked"
        android:text="@string/send" />

</LinearLayout>
