<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.quantumsit.sportsinc.Activities.Request_addActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">


        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/dateSpinner_requestadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/class_date_spinner"
            android:textColorHint="@color/colorAccent"
            app:met_floatingLabel="normal" />

    </LinearLayout>

    <EditText
        android:id="@+id/reasonEditText_requestadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:hint="@string/write_your_reason"
        android:inputType="textMultiLine" />

    <!--<Button
        android:id="@+id/sendButton_requestadd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_red_background"
        android:textColor="@color/colorTextLight"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_gravity="end"
        android:onClick="send_clicked"
        android:text="@string/send" />-->

</LinearLayout>
