<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quantumsit.sportsinc.Side_menu_fragments.CertificatesFragment">

    <TextView
        android:id="@+id/textView_certficates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/no_certificates"
        android:textSize="18sp"
        android:drawableTop="@drawable/ic_faded_certificates" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_certificates"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</FrameLayout>
