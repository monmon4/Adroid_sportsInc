<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quantumsit.sportsinc.JoinNowActivity">

    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textStyle="bold"
        android:textColor="@color/colorTextDark"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:text="@string/the_academy_welcomes_you_to_join" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_welcome"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/locationImageView_joinnow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="go_to_maps"
                android:background="@drawable/ic_location" />

            <TextView
                android:id="@+id/locationTextView_joinnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="@string/location" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneImageView_joinnow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="on_call"
                android:src="@drawable/ic_phone" />

            <TextView
                android:id="@+id/phoneTextView_joinnow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:text="@string/phone" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_times"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="@string/times_available_to_join" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/date"
                android:padding="10dp"
                android:textColorHint="@color/colorAccent"
                app:met_floatingLabel="normal"
                android:id="@+id/dateSpinner_joinnow"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/time"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:textColorHint="@color/colorAccent"
                app:met_floatingLabel="normal"
                android:id="@+id/timeSpinner_joinnow"/>


        </LinearLayout>

        <Button
            android:id="@+id/joinNowButton_joinnow"
            android:layout_width="150dp"
            android:layout_gravity="end"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextLight"
            android:background="@drawable/button_background"
            android:text="@string/join_now" />
    </LinearLayout>
</RelativeLayout>
