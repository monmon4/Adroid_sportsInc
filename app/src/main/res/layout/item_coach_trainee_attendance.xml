<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/traineeNameTextView_itemTraineeAttendance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/attendedImageView_singleItemTraineeAttendance"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_check_circle" />

    <TextView
        android:id="@+id/traineeNameTextView_singleItemTraineeAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorText"
        android:text="@string/trainee_s_name" />
</LinearLayout>
