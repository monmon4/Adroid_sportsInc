<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/traineeNameTextView_itemTraineeAttendance"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/traineeNameTextView_singleItemTraineeAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorText"
        android:text="@string/trainee_s_name" />
    <ImageView
        android:id="@+id/attendedImageView_singleItemTraineeAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/ic_attended" />

    <TextView
        android:id="@+id/traineeAttendanceNoteTextView_singleItemTraineeAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="@color/colorText"
        android:text="@string/note" />
</LinearLayout>
