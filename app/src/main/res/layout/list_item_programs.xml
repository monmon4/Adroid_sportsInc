<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/ten_dimens"
    android:paddingTop="@dimen/ten_dimens"
    android:paddingBottom="@dimen/ten_dimens"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/program_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dimens"
        android:paddingTop="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_30"
        android:text="@string/DefaultName"
        android:background="@color/colorWhite"
        android:textColor="@color/colorLogoBlue"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_more"
        android:layout_toEndOf="@+id/program_name"/>

</LinearLayout>