<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:padding="16dp"
    tools:context=".Activities.ComplainDetailsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello From Request one from manger "
        android:gravity="center"
        android:textStyle="italic"
        android:paddingBottom="10dp"
        android:textSize="24dp"
        android:id="@+id/complainReviewSubject"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        style="?android:listSeparatorTextViewStyle"
        android:background="#000000" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="21 Dec, 2017 12:21pm"
        android:gravity="end"
        android:paddingTop="5dp"
        android:id="@+id/complainReviewDate"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="From: "
            android:paddingLeft="12dp"
            android:textSize="18dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ahmed Ali"
            android:textSize="18dp"
            android:paddingTop="10dp"
            android:paddingLeft="12dp"
            android:id="@+id/complainReviewPerson"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        card_view:cardUseCompatPadding="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hello From Request one from manger dasdsanjnfkadsc\ndkaskdasl\ndlsakdaskda"
            android:textSize="20dp"
            android:padding="15dp"
            android:id="@+id/complainReviewContent"/>
    </android.support.v7.widget.CardView>
</LinearLayout>