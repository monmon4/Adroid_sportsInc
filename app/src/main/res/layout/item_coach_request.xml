<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/creationDate_coachrequestitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creation_date" />

        <TextView
            android:id="@+id/requestforTextView_coachrequestitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/request_for" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/acceptImageButton_coachrequestitem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_check_circle" />

        <TextView
            android:id="@+id/courseNameAndClassNumberTextView_coachrequestitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/acceptImageButton_coachrequestitem"
            android:layout_toRightOf="@+id/acceptImageButton_coachrequestitem"
            android:layout_marginTop="5dp"
            android:text="@string/course_name_class_number" />

        <TextView
            android:id="@+id/classDate_coachrequestitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/courseNameAndClassNumberTextView_coachrequestitem"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/class_date" />
    </RelativeLayout>

</LinearLayout>
